<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tutor_detail_comment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qwh.findtutor.ui.activity.CommentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/iv_detail_comment_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="评论信息"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f5f5f5">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_detail_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"></android.support.v7.widget.RecyclerView>

        <android.support.v4.widget.ContentLoadingProgressBar
            android:id="@+id/loadingprogressbar_detail_comment"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/edt_detail_comment_content"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/edt_search_bg"
            android:gravity="left|center_vertical"
            android:hint="写评论..."
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:singleLine="true"

            />

        <Button
            android:id="@+id/btn_detail_comment"
            android:layout_width="60dp"
            android:layout_height="44dp"
            android:layout_marginLeft="3dp"
            android:background="@null"
            android:text="评论"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
