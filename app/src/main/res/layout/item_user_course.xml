<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#669900"
    app:cardCornerRadius="3dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/item_main_rv_rv_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_detail_bg" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_main_rv_rv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="张老师"
                android:textColor="@android:color/primary_text_light_nodisable"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/item_main_rv_rv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="授课类别:"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_main_rv_rv_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="简介:这是简这是简介测试这是简介这是简这是简介测试这是简介测试介测试测试介测试"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>